{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Usuários e Gastos",
    "version": "1.0.0",
    "description": "API para registro, login e controle de gastos com autenticação JWT."
  },
  "paths": {
  "/register": {
      "post": {
        "summary": "Registrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "senha": { "type": "string" },
                  "salarioMensal": { "type": "number" }
                },
                "required": ["nome", "senha", "salarioMensal"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Usuário criado" },
          "400": { "description": "Erro de validação ou usuário duplicado" }
        }
      }
    },
  "/login": {
      "post": {
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "senha": { "type": "string" }
                },
                "required": ["nome", "senha"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Token JWT válido" },
          "400": { "description": "Erro de autenticação" }
        }
      }
    },
  "/expenses": {
      "post": {
        "summary": "Registrar gasto",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "categoria": { "type": "string" },
                  "descricao": { "type": "string" },
                  "preco": { "type": "number" }
                },
                "required": ["categoria", "descricao", "preco"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Gasto registrado" },
          "400": { "description": "Erro de validação" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      },
      "get": {
        "summary": "Listar gastos do usuário autenticado",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Lista de gastos" },
          "401": { "description": "Token não fornecido" },
          "403": { "description": "Token inválido" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
